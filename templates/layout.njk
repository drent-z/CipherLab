    }

    /* Updated SVG-based glitch effect with cleaner animation */
    .navbar-brand {
        display: flex;
        align-items: center;
        padding: 0.5rem 0;
        margin: 0;
        height: 40px;
        position: relative;
        will-change: transform;
    }

