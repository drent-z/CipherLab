<!-- Additional JavaScript for this page -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Update shift value display
        const shiftSlider = document.getElementById('caesar-shift');
        const shiftValue = document.getElementById('shift-value');
        const caesarInput = document.getElementById('caesar-input');
        const caesarOutput = document.getElementById('caesar-output');
        
        function updateCaesarOutput() {
            if (!caesarInput || !caesarOutput || !shiftSlider) return;
            
            const text = caesarInput.value.toUpperCase();
            const shift = parseInt(shiftSlider.value);
            
            // Update shift value display
            if (shiftValue) {
                shiftValue.textContent = shift;
            }
            
            // Calculate Caesar cipher
            let result = '';
            for (let i = 0; i < text.length; i++) {
                const char = text.charAt(i);
                
                if (char.match(/[A-Z]/)) {
                    const code = text.charCodeAt(i);
                    result += String.fromCharCode(((code - 65 + shift) % 26) + 65);
                } else {
                    result += char;
                }
            }
            
            caesarOutput.textContent = result;
        }
        
        if (shiftSlider) {
            shiftSlider.addEventListener('input', updateCaesarOutput);
        }
        
        if (caesarInput) {
            caesarInput.addEventListener('input', updateCaesarOutput);
        }
        
        // Initialize Caesar cipher output
        updateCaesarOutput();
    });
</script>