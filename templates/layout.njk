    /* Critical CSS for faster initial rendering */
    .sr-only {
      position: absolute;
      width: 1px;
      height: 1px;
      padding: 0;
      margin: -1px;
      overflow: hidden;
      clip: rect(0, 0, 0, 0);
      white-space: nowrap;
      border-width: 0;
    }
    
    /* Fix for FOUC (Flash of Unstyled Content) */
    body {
      opacity: 0;
      transition: opacity 0.3s ease;
    }
    
    body.loaded {
