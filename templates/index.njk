<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Passive scroll handling
        const passiveSupported = () => {
            let passive = false;
            try {
                const options = {
                    get passive() { passive = true; return passive; }
                };
                window.addEventListener('test', null, options);
                window.removeEventListener('test', null, options);
            } catch (err) { passive = false; }
            return passive;
        };
        
        // Add scroll event with passive option for performance
        const scrollOptions = passiveSupported() ? { passive: true } : false;
        
        // Initialize fade animations
        document.querySelectorAll('.fade-in:not(.visible)').forEach(element => {
            if ('IntersectionObserver' in window) {
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            entry.target.classList.add('visible');
                            observer.unobserve(entry.target);
                        }
                    });
                }, {
                    rootMargin: '0px 0px -50px 0px',
                    threshold: 0.1
                });
                
                observer.observe(element);
            } else {
                // Fallback for browsers without IntersectionObserver
                element.classList.add('visible');
            }
        });
        
        // Optimize binary stream animation
        const binaryStream = document.querySelector('.binary-stream');
        if (binaryStream) {
            // Use requestAnimationFrame for smoother animation
            let start = null;
            const duration = 15000; // 15 seconds for one complete cycle
            
            function animateBinary(timestamp) {
                if (!start) start = timestamp;
                const progress = ((timestamp - start) % duration) / duration;
                const position = 100 - (progress * 200); // 100 to -100
                
                binaryStream.style.transform = `translateX(${position}%)`;
                requestAnimationFrame(animateBinary);
            }
            
