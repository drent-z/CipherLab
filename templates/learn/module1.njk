        <div class="quiz-container">
            <!-- Quiz Header -->
            <h3><i class="fas fa-question-circle"></i> Quick Check</h3>
            
            <!-- Quiz Question -->
            <p class="quiz-question">Which is not a cryptography key type?</p>
            
            <!-- Quiz Options -->
            <div class="simple-options">
                <label class="simple-option">
                    <input type="radio" name="quiz1-2" value="a">
