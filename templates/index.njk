        document.querySelectorAll('[style*="transform"]').forEach(element => {
            // Only modify if it's not a critical animation element
            if (!element.classList.contains('binary-stream') && 
                !element.classList.contains('feature-icon-container')) {
                // Store original transform
                const originalTransform = element.style.transform;
                // Clear transform and set it on an inner element if possible
                element.style.transform = 'none';
                
                // If element has children, move transform to first child
                if (element.children.length > 0) {
                    const child = element.children[0];
                    child.style.transform = originalTransform;
