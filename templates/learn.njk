        function updateShiftedAlphabet(shift) {
            if (!alphabetShifted) return;
            
            alphabetShifted.innerHTML = '';
            for (let i = 0; i < 26; i++) {
                const shifted = (i + shift) % 26;
                const letter = String.fromCharCode(65 + shifted);
