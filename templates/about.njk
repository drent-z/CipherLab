<style>
    #about-hero {
        position: relative;
        min-height: 40vh; /* Shorter than main page hero */
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        padding: 3rem 0;
        width: 100%;
        max-width: 100%;
        pointer-events: auto;
        z-index: 1;
    }
    
    /* Force row to be full-width */
    #about-hero .hero-row {
        width: 100%;
        max-width: 100%;
        margin: 0 !important;
        padding: 0 1rem;
        overflow: visible;
    }
    
    .about-intro {
        margin-bottom: 3rem;
    }
    
    .lead {
        font-size: 1.2rem;
        line-height: 1.8;
        color: var(--text);
    }
    
    .team-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin-top: 1rem;
    }
    
    .team-member {
        text-align: center;
        padding: 1.5rem;
        background-color: var(--darker);
        border-radius: 8px;
        border: 1px solid var(--primary-dark);
        transition: all 0.3s ease;
    }
    
    .team-member:hover {
        transform: translateY(-8px);
        border-color: var(--secondary);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }
    
    .team-member-avatar {
        width: 80px;
        height: 80px;
        margin: 0 auto 1rem;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .team-member-avatar i {
        font-size: 4rem;
        color: var(--primary);
        position: relative;
        z-index: 1;
        transition: all 0.3s ease;
    }
    
    .team-member:hover .team-member-avatar i {
        color: var(--secondary);
    }
    
    .team-member-glow {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 100%;
        height: 100%;
        background: radial-gradient(circle, var(--primary-dark) 0%, transparent 70%);
        opacity: 0.3;
        border-radius: 50%;
        transition: all 0.3s ease;
    }
    
    .team-member:hover .team-member-glow {
        background: radial-gradient(circle, var(--secondary) 0%, transparent 70%);
        opacity: 0.5;
    }
    
    .team-member h3 {
        margin-bottom: 0.5rem;
        color: var(--text);
        font-size: 1.5rem;
    }
    
    .team-role {
        color: var(--primary);
        font-weight: bold;
        margin-bottom: 0.5rem;
    }
    
    .tech-stack {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }
    
    .tech-item {
        text-align: center;
        transition: all 0.3s ease;
    }
    
    .tech-icon {
        font-size: 3rem;
        color: var(--primary);
        margin-bottom: 0.5rem;
        transition: all 0.3s ease;
    }
    
    .tech-item:hover .tech-icon {
        color: var(--secondary);
        transform: translateY(-5px);
    }
    
    .tech-item h4 {
        font-size: 1rem;
        margin: 0;
    }
    
    .project-stats {
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;
        gap: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid var(--primary-dark);
    }
    
    .stat-item {
        text-align: center;
    }
    
    .stat-value {
        font-size: 2.5rem;
        font-weight: bold;
        color: var(--primary);
        margin-bottom: 0.5rem;
    }
    
    .stat-label {
        font-size: 0.9rem;
        color: var(--text-muted);
    }
    
    .github-section {
        display: flex;
        justify-content: center;
    }
    
    .github-box {
        background-color: var(--darker);
        border: 1px solid var(--primary-dark);
        border-radius: 8px;
        padding: 1.5rem;
        width: 100%;
        max-width: 500px;
    }
    
    .github-stats {
        display: flex;
        justify-content: space-around;
    }
    
    .github-stat {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
    }
    
    .github-stat i {
        font-size: 2rem;
        color: var(--primary);
    }
    
    .btn-github {
        display: inline-block;
        background-color: #161b22;
        color: var(--text);
        text-decoration: none;
        padding: 0.8rem 1.5rem;
        border-radius: 4px;
        font-weight: 500;
        transition: all 0.3s ease;
        border: 1px solid var(--primary-dark);
    }
    
    .btn-github:hover {
        background-color: var(--primary);
        color: var(--dark);
    }
    
    .repository-link {
        text-align: center;
    }
    
    @media (max-width: 768px) {
        .team-grid {
            grid-template-columns: 1fr;
        }
        
        .tech-stack {
            grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
        }
        
        .github-stats {
            flex-direction: column;
            gap: 1.5rem;
            align-items: center;
        }
    }
</style>