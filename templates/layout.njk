        font-weight: 700;
        font-size: 24px;
        fill: var(--primary);
        filter: drop-shadow(0 0 2px var(--primary)) drop-shadow(0 0 5px var(--primary));
        transition: all 0.3s ease;
        animation: pulse-glow 3s infinite alternate;
        will-change: filter;
        letter-spacing: -0.5px;
    }

    /* More refined glitch animations - optimized for legibility */
    .brand-text-glitch {
        font-family: 'IBM Plex Mono', monospace;
        font-weight: 700;
        font-size: 24px;
        opacity: 0.65; /* Reduced from 0.85 for less blurriness */
        position: absolute;
        top: 0;
        left: 0;
        will-change: transform, opacity;
        letter-spacing: -0.5px;
    }

    .brand-text-glitch1 {
        fill: var(--primary); /* Changed from var(--secondary) to var(--primary) to remove purple */
        filter: drop-shadow(0 0 2px var(--primary));
        animation: hard-glitch1 2s infinite steps(1);
        clip-path: polygon(0 0, 100% 0, 100% 45%, 0 45%);
    }

    .brand-text-glitch2 {
        fill: var(--primary); /* Changed from var(--tertiary) to var(--primary) */
        filter: drop-shadow(0 0 2px var(--primary));
        animation: hard-glitch2 1.5s infinite steps(1);
        clip-path: polygon(0 60%, 100% 60%, 100% 100%, 0 100%);
    }

    /* Digital noise effect behind the text - reduced intensity */
    .navbar-brand::before {
        content: "";
        position: absolute;
        top: -5px;
        left: -5px;
        right: -5px;
        bottom: -5px;
        background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 150 50' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)' opacity='0.1'/%3E%3C/svg%3E");
        opacity: 0.1; /* Reduced from 0.15 */
        mix-blend-mode: screen;
        z-index: -1;
        animation: static-noise 0.5s steps(1) infinite;
        pointer-events: none;
        will-change: transform;
    }

    /* More subtle "digital" glitch animation */
    @keyframes hard-glitch1 {
        0%, 100% {
            transform: translate(0, 0) skew(0deg);
            opacity: 0.5;
        }
        10% {
            transform: translate(-2px, 1px) skew(1deg);
            opacity: 0.4;
        }
        15% {
            transform: translate(1px, -1px) skew(-1deg);
            opacity: 0.6;
        }
        23% {
            transform: translate(0, 0) skew(0deg);
            opacity: 0.5;
        }
        35% {
            transform: translate(-1px, 1px) skew(1deg);
            opacity: 0.4;
        }
        47% {
            transform: translate(1px, 0) skew(1deg);
            opacity: 0.6;
        }
        52% {
            transform: translate(0, 0) skew(0deg);
            opacity: 0.5;
        }
        69% {
            transform: translate(-1px, -1px) skew(-1deg);
            opacity: 0.4;
        }
        82% {
            transform: translate(0, 0) skew(0deg);
            opacity: 0.5;
        }
        91% {
            transform: translate(1px, 1px) skew(1deg);
            opacity: 0.6;
        }
    }

    @keyframes hard-glitch2 {
        0%, 100% {
            transform: translate(0, 0) skew(0deg);
            opacity: 0.5;
        }
        15% {
            transform: translate(1px, 1px) skew(1deg);
            opacity: 0.6;
        }
        21% {
            transform: translate(-1px, 0) skew(-0.5deg);
            opacity: 0.4;
        }
        38% {
            transform: translate(0, 0) skew(0deg);
            opacity: 0.5;
        }
        49% {
            transform: translate(-2px, 1px) skew(1deg);
            opacity: 0.6;
        }
        62% {
            transform: translate(0, 0) skew(0deg);
            opacity: 0.5;
        }
        73% {
            transform: translate(1px, -1px) skew(-1deg);
            opacity: 0.4;
        }
        89% {
            transform: translate(0, -1px) skew(0.5deg);
            opacity: 0.5;
        }
    }

    /* Pulsating glow effect - optimized */
    @keyframes pulse-glow {
        0%, 100% {
            filter: drop-shadow(0 0 2px var(--primary)) drop-shadow(0 0 4px var(--primary));
        }
        50% {
            filter: drop-shadow(0 0 3px var(--primary)) drop-shadow(0 0 7px var(--primary));
        }
    }

    /* Digital static noise animation - optimized */
    @keyframes static-noise {
        0%, 100% { transform: translate(0, 0); }
        25% { transform: translate(-1px, 1px); }
        50% { transform: translate(1px, -1px); }
        75% { transform: translate(-1px, -1px); }
    }

    /* Enhanced hover effects - optimized */
    .navbar-brand:hover .brand-text-base {
        fill: var(--primary);
        animation: neon-flicker 1.5s infinite alternate-reverse;
    }

    .navbar-brand:hover .brand-text-glitch1 {
        fill: var(--primary);
        animation: hard-glitch1 0.5s infinite steps(1);
    }

    .navbar-brand:hover .brand-text-glitch2 {
        fill: var(--primary);
        animation: hard-glitch2 0.3s infinite steps(1);
    }

    /* Neon flickering effect on hover - intensified */
    @keyframes neon-flicker {
        0%, 19%, 21%, 23%, 25%, 54%, 56%, 100% {
            filter: drop-shadow(0 0 5px var(--primary)) 
                   drop-shadow(0 0 10px var(--primary))
                   drop-shadow(0 0 15px var(--primary));
        }
        20%, 24%, 55% {
            filter: drop-shadow(0 0 2px var(--primary));
        }
    }

    .nav-links {
        list-style-type: none;
        display: flex;
        gap: 2rem;
        margin: 0;
        padding: 0;
    }

    .nav-links a {
        color: var(--primary);
        text-decoration: none;
        font-size: 1.1rem;
        font-weight: 500;
        position: relative;
        padding: 0.5rem 0;
        transition: all 0.3s ease;
    }

    .nav-links a::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0;
        height: 2px;
        background-color: var(--secondary);
        transition: width 0.3s ease;
    }

