<script>
document.addEventListener('DOMContentLoaded', function() {
    // Progress tracking key
    const PROGRESS_KEY = 'cipherLabProgress';
    
    // Module and lesson data
    const moduleData = {
        module1: ['lesson1-1', 'lesson1-2', 'lesson1-3'],
        module2: ['lesson2-1', 'lesson2-2', 'lesson2-3'],
        module3: ['lesson3-1', 'lesson3-2', 'lesson3-3'],
        module4: ['lesson4-1', 'lesson4-2', 'lesson4-3'],
        module5: ['lesson5-1', 'lesson5-2', 'lesson5-3']
    };
    
    const moduleTitles = {
        module1: "Fundamentals of Cryptography",
        module2: "Classical Ciphers",
        module3: "Modern Cryptography",
        module4: "Applications",
        module5: "Advanced Topics",
        'final-quiz': "Final Assessment"
    };
    
    const lessonTitles = {
        'lesson1-1': "What is Cryptography?",
        'lesson1-2': "Types of Cryptography",
        'lesson1-3': "Real-World Applications",
        'lesson2-1': "Caesar Cipher",
        'lesson2-2': "Vigen√®re Cipher",
        'lesson2-3': "Substitution Cipher",
        'lesson3-1': "Symmetric Encryption",
        'lesson3-2': "Asymmetric Encryption",
        'lesson3-3': "Hash Functions",
        'lesson4-1': "Secure Communications",
        'lesson4-2': "Digital Signatures",
        'lesson4-3': "Security Protocols", 
        'lesson5-1': "Quantum Cryptography",
        'lesson5-2': "Zero-Knowledge Proofs",
        'lesson5-3': "Future of Cryptography"
    };
    
    // Current state tracking
    let currentModule = 'module1';
    let currentLesson = null;
    
    // DOM elements - Module tabs
    const moduleTabs = document.querySelectorAll('.module-tab');
    const moduleContents = document.querySelectorAll('.module-content');
    const moduleContainer = document.querySelector('.module-container');
    const lessonViewer = document.getElementById('lesson-viewer');
    
    // DOM elements - Lesson navigation
    const backToModuleBtn = document.getElementById('back-to-module');
    const prevLessonBtn = document.getElementById('prev-lesson');
    const nextLessonBtn = document.getElementById('next-lesson');
    const completeLessonBtn = document.getElementById('complete-lesson');
    const currentLessonTitle = document.getElementById('current-lesson-title');
    const currentLessonNumber = document.getElementById('current-lesson-number');
    const totalModuleLessons = document.getElementById('total-module-lessons');
    
    // DOM elements - Progress
    const resetProgressBtn = document.getElementById('reset-progress');
    const overallProgressBar = document.getElementById('overall-progress-bar');
    const overallPercentage = document.getElementById('overall-percentage');
    const completedLessonsCount = document.getElementById('completed-lessons-count');
    const completedModulesCount = document.getElementById('completed-modules-count');
    const finalQuizStatus = document.getElementById('final-quiz-status');
    
    // Progress management functions
    function loadProgress() {
        try {
            const savedProgress = localStorage.getItem(PROGRESS_KEY);
            if (savedProgress) {
                return JSON.parse(savedProgress);
            }
        } catch (error) {
            console.error('Error loading progress:', error);
        }
        return { completedLessons: [], finalQuizCompleted: false };
    }
    
    function saveProgress(progress) {
        try {
            localStorage.setItem(PROGRESS_KEY, JSON.stringify(progress));
            updateProgressDisplay();
        } catch (error) {
            console.error('Error saving progress:', error);
        }
    }
    
    function isLessonCompleted(lessonId) {
        const progress = loadProgress();
        return progress.completedLessons && progress.completedLessons.includes(lessonId);
    }
    
    function isModuleCompleted(moduleId) {
        const progress = loadProgress();
        if (!progress.completedLessons) return false;
        
        const moduleLessons = moduleData[moduleId];
        return moduleLessons.every(lessonId => progress.completedLessons.includes(lessonId));
    }
    
    function updateProgressDisplay() {
        const progress = loadProgress();
        const completedLessons = progress.completedLessons || [];
        const totalLessons = Object.values(moduleData).flat().length;
        
        // Update status indicators for all lessons
        Object.entries(moduleData).forEach(([moduleId, lessons]) => {
            lessons.forEach(lessonId => {
                const statusIcon = document.getElementById(`status-${lessonId}`);
                const statusText = statusIcon ? statusIcon.nextElementSibling : null;
                
                if (statusIcon && statusText) {
                    if (completedLessons.includes(lessonId)) {
                        statusIcon.className = 'fas fa-check-circle';
                        statusText.textContent = 'Completed';
                    } else {
                        statusIcon.className = 'fas fa-circle';
                        statusText.textContent = 'Not started';
                    }
                }
            });
            
            // Update module progress bar
            const moduleCompletedCount = lessons.filter(lessonId => 
                completedLessons.includes(lessonId)
            ).length;
            
            const modulePercentage = Math.round((moduleCompletedCount / lessons.length) * 100);
            const moduleProgressBar = document.getElementById(`${moduleId}-progress-bar`);
            const modulePercentageText = document.getElementById(`${moduleId}-percentage`);
            
            if (moduleProgressBar) {
                moduleProgressBar.style.width = `${modulePercentage}%`;
                moduleProgressBar.setAttribute('aria-valuenow', modulePercentage);
            }
            
            if (modulePercentageText) {
                modulePercentageText.textContent = `${modulePercentage}%`;
            }
            
            // Update quiz module completion indicators
            const quizModuleCompletion = document.getElementById(`quiz-${moduleId}-completion`);
            if (quizModuleCompletion) {
                quizModuleCompletion.style.width = `${modulePercentage}%`;
            }
        });
        
        // Update overall progress statistics
        const overallPercentage = Math.round((completedLessons.length / totalLessons) * 100);
        overallProgressBar.style.width = `${overallPercentage}%`;
        overallProgressBar.setAttribute('aria-valuenow', overallPercentage);
        
        document.getElementById('overall-percentage').textContent = `${overallPercentage}%`;
        document.getElementById('completed-lessons-count').textContent = `${completedLessons.length}/${totalLessons}`;
        
        const completedModules = Object.keys(moduleData).filter(moduleId => 
            isModuleCompleted(moduleId)
        ).length;
        
        document.getElementById('completed-modules-count').textContent = `${completedModules}/5`;
        
        document.getElementById('final-quiz-status').textContent = 
            progress.finalQuizCompleted ? 'Completed' : 'Not Started';
    }
    
    // Module switching
    function showModule(moduleId) {
        // Hide lesson viewer, show module container
        lessonViewer.style.display = 'none';
        moduleContainer.style.display = 'block';
        
        // Update active module tab
        moduleTabs.forEach(tab => {
            if (tab.getAttribute('data-module') === moduleId) {
                tab.classList.add('active');
            } else {
                tab.classList.remove('active');
            }
        });
        
        // Show selected module content
        moduleContents.forEach(content => {
            if (content.id === `${moduleId}-content`) {
                content.classList.add('active');
            } else {
                content.classList.remove('active');
            }
        });
        
        // Update current module
        currentModule = moduleId;
        
        // Scroll to top
        window.scrollTo({ top: 0, behavior: 'smooth' });
    }
    
    // Lesson viewing
    function showLesson(lessonId) {
        // Get module ID from lesson ID (e.g., lesson1-2 => module1)
        const moduleId = `module${lessonId.split('-')[0].replace('lesson', '')}`;
        const module = moduleData[moduleId];
        const lessonIndex = module.indexOf(lessonId);
        
        // Hide module container, show lesson viewer
        moduleContainer.style.display = 'none';
        lessonViewer.style.display = 'block';
        
        // Update lesson navigation
        currentLessonTitle.textContent = lessonTitles[lessonId];
        currentLessonNumber.textContent = lessonIndex + 1;
        totalModuleLessons.textContent = module.length;
        
        // Hide all lesson content
        document.querySelectorAll('.lesson-container').forEach(container => {
            container.style.display = 'none';
        });
        
        // Show the selected lesson
        const lessonContent = document.getElementById(`${lessonId}-content`);
        if (lessonContent) {
            lessonContent.style.display = 'block';
        }
        
        // Update complete button status
        if (isLessonCompleted(lessonId)) {
            completeLessonBtn.classList.add('completed');
            completeLessonBtn.innerHTML = '<i class="fas fa-check-circle"></i> Completed';
        } else {
            completeLessonBtn.classList.remove('completed');
            completeLessonBtn.innerHTML = '<i class="fas fa-check-circle"></i> Mark as Complete';
        }
        
        // Update navigation buttons visibility
        prevLessonBtn.style.display = lessonIndex > 0 ? 'flex' : 'none';
        nextLessonBtn.style.display = lessonIndex < module.length - 1 ? 'flex' : 'none';
        
        // Update current state
        currentModule = moduleId;
        currentLesson = lessonId;
        
        // Scroll to top
        window.scrollTo({ top: 0, behavior: 'smooth' });
    }
    
    // Event Listeners - Module tabs
    moduleTabs.forEach(tab => {
        tab.addEventListener('click', function() {
            const moduleId = this.getAttribute('data-module');
            showModule(moduleId);
        });
    });
    
    // Event Listeners - Lesson navigation
    backToModuleBtn.addEventListener('click', function() {
        showModule(currentModule);
    });
    
    prevLessonBtn.addEventListener('click', function() {
        if (!currentLesson) return;
        
        const moduleId = currentModule;
        const module = moduleData[moduleId];
        const currentIndex = module.indexOf(currentLesson);
        
        if (currentIndex > 0) {
            showLesson(module[currentIndex - 1]);
        }
    });
    
    nextLessonBtn.addEventListener('click', function() {
        if (!currentLesson) return;
        
        const moduleId = currentModule;
        const module = moduleData[moduleId];
        const currentIndex = module.indexOf(currentLesson);
        
        if (currentIndex < module.length - 1) {
            showLesson(module[currentIndex + 1]);
        }
    });
    
    completeLessonBtn.addEventListener('click', function() {
        if (!currentLesson) return;
        
        const progress = loadProgress();
        const completedLessons = progress.completedLessons || [];
        
        if (!completedLessons.includes(currentLesson)) {
            completedLessons.push(currentLesson);
            progress.completedLessons = completedLessons;
            saveProgress(progress);
            
            // Update button appearance
            completeLessonBtn.classList.add('completed');
            completeLessonBtn.innerHTML = '<i class="fas fa-check-circle"></i> Completed';
            
            // Add animation
            completeLessonBtn.classList.add('pulse-animation');
            setTimeout(() => {
                completeLessonBtn.classList.remove('pulse-animation');
            }, 1000);
        }
    });
    
    // Event Listener - Reset progress
    resetProgressBtn.addEventListener('click', function() {
        if (confirm('Are you sure you want to reset your progress? This action cannot be undone.')) {
            localStorage.removeItem(PROGRESS_KEY);
            saveProgress({ completedLessons: [], finalQuizCompleted: false });
            
            // Provide feedback
            this.textContent = 'Progress Reset!';
            setTimeout(() => {
                this.innerHTML = '<i class="fas fa-redo-alt"></i> Reset Progress';
            }, 2000);
        }
    });
    
    // Initialize lessons click handlers
    Object.entries(moduleData).forEach(([moduleId, lessons]) => {
        lessons.forEach(lessonId => {
            const lessonCard = document.getElementById(`${lessonId}-card`);
            if (lessonCard) {
                lessonCard.addEventListener('click', function() {
                    showLesson(lessonId);
                });
            }
        });
    });
    
    // Function to check answers in quick check quizzes
    window.checkAnswer = function(button, lessonId) {
        const correctAnswer = button.getAttribute('data-correct');
        const questionContainer = button.closest('.quiz-container');
        const selectedOption = questionContainer.querySelector('input[type="radio"]:checked');
        
        if (!selectedOption) {
            alert('Please select an answer first!');
            return;
        }
        
        const feedbackContainer = questionContainer.querySelector('.feedback-container');
        
        // Show feedback container
        feedbackContainer.style.display = 'block';
        
        // Check if answer is correct
        if (selectedOption.value === correctAnswer) {
            // Show correct feedback, hide incorrect
            questionContainer.querySelector('.correct-answer').style.display = 'block';
            questionContainer.querySelector('.incorrect-answer').style.display = 'none';
            
            // Highlight selected option
            selectedOption.closest('.simple-option').classList.add('correct-option');
        } else {
            // Show incorrect feedback, hide correct
            questionContainer.querySelector('.correct-answer').style.display = 'none';
            questionContainer.querySelector('.incorrect-answer').style.display = 'block';
            
            // Highlight selected option as incorrect
            selectedOption.closest('.simple-option').classList.add('incorrect-option');
            
            // Highlight correct option
            const correctOption = questionContainer.querySelector(`input[value="${correctAnswer}"]`);
            if (correctOption) {
                correctOption.closest('.simple-option').classList.add('correct-option');
            }
        }
        
        // Disable all options
        questionContainer.querySelectorAll('input[type="radio"]').forEach(input => {
            input.disabled = true;
        });
        
        // Update button
        button.textContent = 'Answered';
        button.disabled = true;
    };
    
    // Initialize progress display
    updateProgressDisplay();
    
    // Show first module on load
    showModule('module1');
});
</script>