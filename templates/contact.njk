    }
</style>

<!-- Additional JavaScript for form validation -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Form validation
        const form = document.getElementById('contact-form');
        
        if (form) {
            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                    
                    // Add validation styling
                    Array.from(form.elements).forEach(input => {
                        if (!input.validity.valid) {
                            input.classList.add('is-invalid');
                            
                            // Add feedback message if not exists
                            const parent = input.parentElement;
                            if (!parent.querySelector('.invalid-feedback')) {
                                const feedback = document.createElement('div');
                                feedback.classList.add('invalid-feedback');
                                feedback.textContent = input.validationMessage || 'This field is required';
                                
                                if (parent.classList.contains('input-group')) {
                                    parent.parentElement.appendChild(feedback);
                                } else {
                                    parent.appendChild(feedback);
                                }
                            }
                        }
                    });
                } else {
                    // Simulate form submission (would be handled by backend in reality)
                    event.preventDefault();
                    
                    // Show success message
                    const formContainer = form.parentElement;
                    form.style.display = 'none';
                    
                    const successMsg = document.createElement('div');
                    successMsg.classList.add('text-center', 'py-5');
                    successMsg.innerHTML = `
                        <div class="success-icon mb-4">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <h3>Message Sent Successfully!</h3>
                        <p>Thank you for contacting us. We'll get back to you soon.</p>
                    `;
                    
                    formContainer.appendChild(successMsg);
                    
                    // Style the success message
                    const successIcon = successMsg.querySelector('.success-icon i');
                    successIcon.style.fontSize = '4rem';
                    successIcon.style.color = 'var(--primary)';
                    
                    // Add animation
                    successIcon.style.animation = 'pulse 2s infinite';
                    
                    // Add keyframe animation
                    const style = document.createElement('style');
                    style.textContent = `
                        @keyframes pulse {
                            0% { transform: scale(1); }
                            50% { transform: scale(1.2); }
                            100% { transform: scale(1); }
                        }
                    `;
                    document.head.appendChild(style);
                }
                
                form.classList.add('was-validated');
            });
            
            // Clear validation styling when input changes
            Array.from(form.elements).forEach(input => {
                input.addEventListener('input', function() {
                    input.classList.remove('is-invalid');
                    
                    const parent = input.parentElement;
                    const feedback = parent.querySelector('.invalid-feedback') || 
                                   (parent.parentElement && parent.parentElement.querySelector('.invalid-feedback'));
                    
                    if (feedback) {
                        feedback.remove();
                    }
                });
            });
        }
    });
</script>