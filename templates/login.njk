{% block title %}Login{% endblock %}
{% block content %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Login</h2>
            <!-- In a fully static site, this form won't actually log anyone in
                 unless you integrate a client-side or external service. -->
            <form action="/login.html" method="POST">
                <div class="form-group">
                    <label for="email" class="form-label">Email</label>
                    <input
                      type="email"
                      id="email"
                      name="email"
                      class="form-control"
                      placeholder="Enter your email"
                      required
                    />
                </div>
                <div class="form-group">
                    <label for="password" class="form-label">Password</label>
                    <input
                      type="password"
                      id="password"
                      name="password"
                      class="form-control"
                      placeholder="Enter your password"
                      required
                    />
                </div>
                <!-- A static site can't process "Remember Me" on the server side,
                     but you can handle it client-side if you wish. -->
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="remember_me" name="remember_me" />
                    <label class="form-check-label" for="remember_me">Remember Me</label>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Login</button>
            </form>

            <div class="mt-3 text-center">
                <p>Don't have an account? <a href="/register.html">Register</a></p>
                <p><a href="/reset_request.html">Forgot Password?</a></p>
                <!-- In a static site, there's no real email verification system -->
                <!-- If you still want a "resend email" link, remove the if statement -->
                <!-- or keep a placeholder script. -->
                <!--
                {% if show_resend_button %}
                    <p>Didn't receive a verification email?
                       <button class="btn btn-link" onclick="resendVerificationEmail()">
                           Resend Verification Email
                       </button>
                    </p>
                {% endif %}
                -->
            </div>
        </div>
    </div>
</div>

<!-- Optional placeholder for a static "resend verification email" link -->
<script>
function resendVerificationEmail() {
    // This is just a placeholder alert in a static site
    alert("Static site: no actual verification system in place.");
}
</script>
{% endblock %}
